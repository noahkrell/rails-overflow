<div class="container">
  <br>
  <div class="signup">
    <h1>Login</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">       
    <%= form_with scope: :user, url: users_path, local: true do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
      </div>
    </div><br>
    <h1>Sign up</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(User.new) do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <h1> <span style="color:red;">Rails</span>_overflow</h1>
  <p>.</p>
  <p>.</p>
  <p>.</p>
  <h2> Recent questions </h2>
  <% @questions.each do |question| %>
    <tr>
      <td>votes: <%= question.votes %></td>
      <td>answers: <%= question.answers.count %></td>
      <td><%=question.title%></td>
      <td>posted: <%= question.created_at.strftime("%B %d, %Y") %></td>
      <td>  <%= link_to 'Show', question %></td><br>
      <td>author: <%= link_to question.author.username, question.author %></td> 
    </tr><br><br>
  <% end %>
</div>

      
